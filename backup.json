{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,

    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      //"*": ["src/*"]
      "@cp/*": ["src/components"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
